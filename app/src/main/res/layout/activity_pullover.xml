<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/db1_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ru.laz.knitting.custom_view.ParameterEntry
                android:id="@+id/paramentry_width"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                custom:description="@string/pullover_width"
                custom:help="@string/pullover_width_help"
                custom:value="" />

            <ru.laz.knitting.custom_view.ParameterEntry
                android:id="@+id/paramentry_height"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                custom:description="@string/pullover_height"
                custom:help="@string/pullover_height_help"
                custom:value="" />

            <ru.laz.knitting.custom_view.ParameterEntry
                android:id="@+id/paramentry_sleeve"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                custom:description="@string/pullover_sleeve"
                custom:help="@string/pullover_sleeve_help"
                custom:value="" />

            <Spinner
                android:id="@+id/loopSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="293dp" />

            <TextView
                android:id="@+id/resultText"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="result"
                tools:layout_editor_absoluteX="163dp"
                tools:layout_editor_absoluteY="246dp" />


        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>